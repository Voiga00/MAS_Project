@page "/goalkeepers-list"
@using Microsoft.EntityFrameworkCore
@using s25028_mas.Context
@using s25028_mas.Entities
@inject MyDbContext dbcontext
@inject NavigationManager Navigation
@rendermode InteractiveServer

<h3>Wszyscy Bramkarze</h3>

<nav><a class="btn" href="/players">Powrót</a></nav>

@if (goalkeepers != null)
{
    <table class="table">
        <thead>
        <tr>
            <th>ID Player</th>
            <th>Imie</th>
            <th>Nazwisko</th>
            <th>Numer</th>
            <th>Drużyna</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var goalkeeper in goalkeepers)
        {
            <tr>
                <td>@goalkeeper.Player_ID_PlayerNavigation.ID_Player</td>
                <td>@goalkeeper.Player_ID_PlayerNavigation.Person_ID_PersonNavigation.name</td>
                <td>@goalkeeper.Player_ID_PlayerNavigation.Person_ID_PersonNavigation.Surname</td>
                <td>@goalkeeper.Player_ID_PlayerNavigation.Number</td>
                <td>@(goalkeeper.Player_ID_PlayerNavigation.Team_ID_team == 999 ? "Brak drużyny" : $"Team {goalkeeper.Player_ID_PlayerNavigation.Team_ID_team}")</td>
                <td>
                    <button @onclick="() => NavigateToGoalkeeper(goalkeeper.Player_ID_PlayerNavigation.ID_Player)">Szczegóły</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Loading goalkeepers...</p>
}

@code {
    private List<Goalkeeper> goalkeepers;

    protected override async Task OnInitializedAsync()
    {
        goalkeepers = await dbcontext.Goalkeepers
            .Include(g => g.Player_ID_PlayerNavigation.Person_ID_PersonNavigation)
            .ToListAsync();
    }

    private void NavigateToGoalkeeper(int playerId)
    {
        Navigation.NavigateTo($"/summary/{playerId}");
    }
}